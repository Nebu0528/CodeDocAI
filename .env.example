# Environment variables for CodeDocAI configuration

# API Configuration - New Feature!
USE_API=false
API_PROVIDER=openai  # Options: openai, anthropic, gemini
API_KEY=your_api_key_here
API_MODEL=gpt-3.5-turbo

# Example API Configurations:
# For OpenAI: API_PROVIDER=openai, API_KEY=sk-..., API_MODEL=gpt-3.5-turbo
# For Anthropic: API_PROVIDER=anthropic, API_KEY=sk-ant-..., API_MODEL=claude-3-haiku-20240307  
# For Google Gemini
# API_PROVIDER=gemini
# API_KEY=your_gemini_key
# API_MODEL=gemini-2.0-flash

# Model Configuration (Local Model)
MODEL_NAME=t5-base
MODEL_PATH=models/codetext_t5
MAX_LENGTH=512
MAX_NEW_TOKENS=200
NUM_BEAMS=4
TEMPERATURE=1.0
TOP_K=50
TOP_P=0.9

# Training Configuration
EPOCHS=5
BATCH_SIZE=8
LEARNING_RATE=5e-5
OUTPUT_DIR=./results

# Data Configuration
DATASET_NAME=jtatman/python-code-dataset-500k
TRAINING_DATA_PATH=data/training_data.txt
TEST_SPLIT=0.2
# MAX_SAMPLES=10000  # Uncomment to limit dataset size

# Web Configuration
WEB_HOST=localhost
WEB_PORT=8501
WEB_TITLE=CodeDocAI - Generate Documentation for Code
MAX_FILE_SIZE=10485760
ALLOWED_EXTENSIONS=py,txt,js,ts,java,cpp,c

# Logging Configuration
LOG_LEVEL=INFO
LOG_DIR=logs